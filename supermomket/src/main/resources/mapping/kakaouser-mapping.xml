<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="KakaoUserMapper">

    <!-- 카카오 사용자 ID로 사용자 조회 -->
    <select id="getUserById" resultType="com.spring.mom.vo.UserVO">
        SELECT * FROM user WHERE u_id = #{u_id}
    </select>

    <!-- 카카오 사용자 신규 등록 -->
    <insert id="insertUser" parameterType="com.spring.mom.vo.UserVO">
        INSERT INTO user (u_id, u_pw, u_name, u_nickname, u_email, u_pno, u_address)
        VALUES (#{u_id}, #{u_pw}, #{u_name}, #{u_nickname}, #{u_email}, #{u_pno}, #{u_address})
    </insert>

</mapper>
